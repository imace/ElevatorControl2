<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kio.ElevatorControl"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="19"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:hardwareAccelerated="true"
            android:theme="@style/AppBaseTheme">
        <!-- 登陆认证 -->
        <activity
                android:name="com.kio.ElevatorControl.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.kio.ElevatorControl.activities.ContainerActivity">
        </activity>
        <activity
                android:name="com.kio.ElevatorControl.activities.CoreActivity">
        </activity>
        <activity
                android:name="com.kio.ElevatorControl.activities.FailureActivity">
        </activity>
        <activity
                android:name="com.kio.ElevatorControl.activities.IndexActivity">
        </activity>
        <activity
                android:name="com.kio.ElevatorControl.activities.TransactionActivity">
        </activity>
        <activity
                android:name="com.kio.ElevatorControl.activities.ParameterGroupActivity">
        </activity>
    </application>

</manifest>