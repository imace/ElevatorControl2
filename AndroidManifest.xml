<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kio.ElevatorControl"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="19"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppBaseTheme">
        <activity
                android:name="com.kio.ElevatorControl.activities.LoginActivity"
                android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.kio.ElevatorControl.activities.ContainerActivity"
                android:label="@string/title_activity_container">
        </activity>
        <activity
                android:name="com.kio.ElevatorControl.activities.CoreActivity"
                android:label="@string/title_activity_core">
        </activity>
        <activity
                android:name="com.kio.ElevatorControl.activities.FailureActivity"
                android:label="@string/title_activity_failure">
        </activity>
        <activity
                android:name="com.kio.ElevatorControl.activities.IndexActivity"
                android:label="@string/title_activity_index">
        </activity>
        <activity
                android:name="com.kio.ElevatorControl.activities.TransactionActivity"
                android:label="@string/title_activity_transaction">
        </activity>
        <activity
                android:name="com.kio.ElevatorControl.activities.ParameterGroupActivity"
                android:label="@string/title_activity_parameter_group">
        </activity>
    </application>

</manifest>