<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:background="@drawable/card_view_background"
            android:layout_marginRight="@dimen/card_view_margin"
            android:layout_marginLeft="@dimen/card_view_margin"
            android:layout_marginTop="@dimen/card_view_margin"
            android:paddingLeft="@dimen/card_view_margin"
            android:paddingRight="@dimen/card_view_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:minHeight="@dimen/card_cell_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="18sp"
                    android:textColor="#515151"
                    android:text="@string/equipment_model_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#ffd8d8d8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:minHeight="@dimen/card_cell_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="18sp"
                    android:textColor="#515151"
                    android:text="@string/manufacturers_serial_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <org.holoeverywhere.widget.GridView
            android:id="@+id/firmware_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:columnWidth="220dp"
            android:scrollbarStyle="outsideOverlay"
            android:stretchMode="columnWidth"
            android:listSelector="#00000000"
            android:padding="@dimen/card_view_margin"
            android:numColumns="auto_fit"/>
</LinearLayout>