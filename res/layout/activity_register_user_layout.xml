<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!-- 用户名 -->
    <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/card_view_background">
        <org.holoeverywhere.widget.TextView
                android:layout_marginLeft="10dp"
                style="@style/Holo.TextAppearance.Light"
                android:textColor="#515151"
                android:text="@string/user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:background="#ffdfdfdf"
                android:layout_margin="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        <org.holoeverywhere.widget.EditText
                android:id="@+id/user_name"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <!-- 公司 -->
    <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/card_view_background">
        <org.holoeverywhere.widget.TextView
                android:layout_marginLeft="10dp"
                style="@style/Holo.TextAppearance.Light"
                android:textColor="#515151"
                android:text="@string/company_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:background="#ffdfdfdf"
                android:layout_margin="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        <org.holoeverywhere.widget.EditText
                android:id="@+id/company"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <!-- 手机 -->
    <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/card_view_background">
        <org.holoeverywhere.widget.TextView
                android:layout_marginLeft="10dp"
                style="@style/Holo.TextAppearance.Light"
                android:textColor="#515151"
                android:text="@string/cell_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:background="#ffdfdfdf"
                android:layout_margin="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        <org.holoeverywhere.widget.EditText
                android:id="@+id/cell_phone"
                android:layout_weight="1"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <!-- 电话 -->
    <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/card_view_background">
        <org.holoeverywhere.widget.TextView
                android:layout_marginLeft="10dp"
                style="@style/Holo.TextAppearance.Light"
                android:textColor="#515151"
                android:text="@string/tel_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:background="#ffdfdfdf"
                android:layout_margin="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        <org.holoeverywhere.widget.EditText
                android:id="@+id/tel_phone"
                android:layout_weight="1"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <!-- 邮箱 -->
    <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/card_view_background">
        <org.holoeverywhere.widget.TextView
                android:layout_marginLeft="10dp"
                style="@style/Holo.TextAppearance.Light"
                android:textColor="#515151"
                android:text="@string/email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
                android:background="#ffdfdfdf"
                android:layout_margin="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        <org.holoeverywhere.widget.EditText
                android:id="@+id/email"
                android:layout_weight="1"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <!-- 提交 -->
    <LinearLayout
            android:id="@+id/submit"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/card_view_selector">
        <org.holoeverywhere.widget.ProgressBar
                android:id="@+id/submit_progress"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <org.holoeverywhere.widget.TextView
                style="@style/Holo.TextAppearance.Light"
                android:id="@+id/submit_text"
                android:background="@android:color/transparent"
                android:text="@string/submit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <org.holoeverywhere.widget.TextView
                android:id="@+id/error_text"
                style="@style/Holo.TextAppearance.Light"
                android:textColor="#ffaf2422"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>