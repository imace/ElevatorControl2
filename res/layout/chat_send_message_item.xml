<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/send_content_view"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/send_icon_view"
            android:background="@drawable/chat_content_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/send_chat_title"
                style="@android:style/TextAppearance"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/send_phone_number"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:layout_marginRight="10dp"
                    android:textColor="#989898"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/send_time"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:textColor="#989898"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <com.inovance.ElevatorControl.views.SquareLayout
            android:id="@+id/send_icon_view"
            android:gravity="center"
            android:background="#AF0000"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/send_type_icon"
                android:contentDescription="@null"
                android:background="#00000000"
                android:src="@drawable/chat_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </com.inovance.ElevatorControl.views.SquareLayout>
</RelativeLayout>