<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/main_content_background_color"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <GridView
            android:id="@+id/grid_view"
            android:layout_weight="5"
            android:padding="@dimen/card_view_margin"
            android:layout_width="match_parent"
            android:gravity="center"
            android:verticalSpacing="12dp"
            android:horizontalSpacing="12dp"
            android:columnWidth="100dp"
            android:scrollbarStyle="outsideOverlay"
            android:stretchMode="columnWidth"
            android:listSelector="#00000000"
            android:numColumns="auto_fit"
            android:layout_height="0dp"/>
    <LinearLayout
            android:baselineAligned="false"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/card_view_background"
            android:layout_marginRight="@dimen/card_view_margin"
            android:layout_marginLeft="@dimen/card_view_margin"
            android:layout_marginBottom="@dimen/card_view_margin"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <ImageButton
                    android:id="@+id/open_door_button"
                    android:contentDescription="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/open_door_text"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <ImageButton
                    android:id="@+id/close_door_button"
                    android:contentDescription="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/close_door_text"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>