<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <!-- 快捷菜单名称 -->
    <LinearLayout
            android:gravity="center"
            android:minHeight="@dimen/card_cell_height"
            android:paddingLeft="@dimen/card_view_margin"
            android:paddingRight="@dimen/card_view_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <org.holoeverywhere.widget.TextView
                android:text="@string/shortcut_name_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        <org.holoeverywhere.widget.EditText
                android:id="@+id/shortcut_name"
                android:text="@string/shortcut_action_text"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
            android:background="@android:drawable/divider_horizontal_bright"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    <!-- 快捷指令 -->
    <LinearLayout
            android:gravity="center"
            android:minHeight="@dimen/card_cell_height"
            android:paddingLeft="@dimen/card_view_margin"
            android:paddingRight="@dimen/card_view_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <org.holoeverywhere.widget.TextView
                android:text="@string/shortcut_action_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        <org.holoeverywhere.widget.Spinner
                android:id="@+id/action_spinner"
                style="@style/Holo.Spinner.Light"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>