<resources>
    <style name="Theme.Global" parent="Holo.Theme.Light.DarkActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:spinnerItemStyle">@style/CustomSpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/CustomSpinnerDropdownItemStyle</item>
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="numberPickerStyle">@style/CustomNumberPickerStyle</item>
    </style>

    <!-- ActionBar 样式 -->
    <style name="CustomActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_blue</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_blue</item>
    </style>

    <style name="CustomNumberPickerStyle" parent="Holo.NumberPicker">

    </style>

    <style name="CustomSpinnerItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#eeeeee</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomSpinnerDropdownItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#eeeeee</item>
        <item name="android:background">#303030</item>
    </style>

    <style name="CustomDialogStyle" parent="Holo.Theme.Dialog.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/tab_indicator_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

</resources>